/****************
# GitHub Config #
****************/
var github = {};

/* Configuration */
// Enable|Disable Debugging
github.debug = false;
// Connection protocol (HTTP|HTTPS)
github.protocol = 'https';
// GitHub API URL (default: api.github.com)
github.host = 'api.github.com';
// API Path Prefix (optional, usually for GitHub Enterprise versions)
github.pathPrefix = null;
// Custom request headers
github.headers = null;
// Request timeout (in ms)
github.timeout = 5000;

/* Authentication (pick 1!) */
// Basic [GitHub]
github.authType = appConst.GITHUB_AUTH_BASIC;
github.username = 'GITHUB_USERNAME';
github.password = 'GITHUB_PASSWORD';

